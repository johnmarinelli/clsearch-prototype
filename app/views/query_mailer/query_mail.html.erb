<!doctype html>
<html>
  <head>
    <meta content="text/html' charset=UTF-8" http-equiv="Content-Type" />
  </head>

  <body>
    <%= first_time_searching_text(@first_time_searching).html_safe %>
    <% @posts.each do |post| %>
      <div class="email-post">
        <h3><a href="<%= post[:url] %>"><%= post[:heading] %></a></h3>
        <% unless post[:img].nil? %>
          <a href="<%= post[:url] %>"><img src="<%= post[:img] %>" /></a>
        <% end %>
        <div class="location"><%= post[:location] %></div>
        <div class="price"><%= number_to_currency post[:price] %></div>
        <div class="date-posted"><%= post[:date_posted] %></div>
        <p class="post-body"><%= post[:body].truncate 100, separator: /\s/ %></p>
        <hr/>
      </div>
    <% end %>
  </body>
</html>
