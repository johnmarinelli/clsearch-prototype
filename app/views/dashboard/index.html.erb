<h1> <%= @user.email %> </h1>

<% if @user.has_queries? %>
  <% @user.queries.each do |query| %>
    <div class="query">
      <%= query.title %>
      <%= link_to 'Edit', edit_query_path(query) %>
      <%= link_to 'Destroy', query_path(query), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
<% else %>
  <p>You have no queries saved!  Why don't you <%= link_to 'create some?', new_query_path %></p>
<% end %>

<p><%= link_to 'Create new query', new_query_path %></p>
<%= link_to 'Sign out', logout_path, :method => :delete %>
