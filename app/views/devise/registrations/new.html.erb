<div id="headerwrap">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>Your searches, straight to your email.</h1>
        <p class="text-white call-to-action-blurb">
          Get daily results from sites like eBay, Indeed, Backpage, Apartments.com, and more sent straight to your email.
        </p>
        <p class="text-white call-to-action-small-blurb">
          Try it out.  Enter your email here and make your queries later, or start making your first query below.
        </p>
        <%= form_for(resource, 
            as: resource_name, 
            url: registration_path(resource_name),
            html: { class: 'form-inline', id: 'email-only' }) do |f| %>
          <%= f.email_field :email, class: 'form-control', id: 'user_email_top', placeholder: 'Enter your email address' %>
          <%= f.submit 'Submit', class: 'btn btn-warning btn-lg' %>
        <% end %>
      </div><!-- /col-lg-6 -->
    </div><!-- /row -->
  </div><!-- /container -->
</div><!-- /headerwrap -->

<div class="container full-width">
  <div class="row">
    <%= devise_error_messages! %>
    <%= render 'templates/forms/queries/index_page_query_form' %>
  </div>
  <!--
  <%= link_to "Already registered, but didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
  -->
</div>

<%= render 'templates/footer/footer' %>
